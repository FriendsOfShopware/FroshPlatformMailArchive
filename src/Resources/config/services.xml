<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults autowire="true" autoconfigure="true"/>
        <prototype namespace="Frosh\MailArchive\" resource="../../" />

        <service id="Frosh\MailArchive\Content\MailArchive\MailArchiveDefinition">
            <tag name="shopware.entity.definition" entity="frosh_mail_archive"/>
        </service>

        <service id="Frosh\MailArchive\Extension\System\SalesChannel\SalesChannelExtension">
            <tag name="shopware.entity.extension"/>
        </service>

        <service id="Frosh\MailArchive\Extension\Checkout\Customer\CustomerExtension">
            <tag name="shopware.entity.extension"/>
        </service>

        <service id="Frosh\MailArchive\Services\MailSender" public="true" decorates="Shopware\Core\Content\Mail\Service\MailSender">
            <argument type="service" id="Frosh\MailArchive\Services\MailSender.inner"/>
        </service>

        <service id="Frosh\MailArchive\Controller\Api\MailResendController" public="true">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="Frosh\MailArchive\Task\CleanupTask">
            <tag name="shopware.scheduled.task" />
        </service>

        <service id="Frosh\MailArchive\Task\CleanupTaskHandler">
            <argument type="service" id="scheduled_task.repository" />
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
            <argument key="$privateFilesystem" type="service" id="frosh_platform_mail_archive.filesystem.private"/>

            <tag name="messenger.message_handler" />
        </service>
    </services>
</container>
